{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetadataOutputPhaseBDraft",
  "description": "Locked draft for Phase B only. Not activated.",
  "type": "object",
  "required": ["faq_snippets", "key_claims_for_ai"],
  "properties": {
    "faq_snippets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question", "answer", "source_ids"],
        "properties": {
          "question": {"type": "string"},
          "answer": {"type": "string"},
          "source_ids": {
            "type": "array",
            "items": {"type": "string", "pattern": "^src_[a-zA-Z0-9_-]{8,}$"},
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    },
    "key_claims_for_ai": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim", "evidence_source_ids"],
        "properties": {
          "claim": {"type": "string"},
          "evidence_source_ids": {
            "type": "array",
            "items": {"type": "string", "pattern": "^src_[a-zA-Z0-9_-]{8,}$"},
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
